<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>The Daily Tab - Tab List</title>
  <link href="styles.css" rel="stylesheet" type="text/css" />
  <link rel="icon" href="images/tab-icon.svg" type="image/svg+xml">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Jura:wght@300..700&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Jura:wght@300..700&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<script>
  function deleteTab(tabId) {
    if (!confirm('Are you sure you want to delete this tab link?')) {
      return;
    }

    fetch(`/tabs/${tabId}`, {
      method: 'DELETE'
    })
    .then(res => res.json())
    .then(data => {
      alert(data.message);
      window.location.href = '/tab-list';
    })
    .catch(err => {
      console.error(err);
      alert('Failed to delete tab');
    });
  }
</script>

<body>
  <nav>
    <h1>The Daily Tab</h1>
  </nav>
  <main>
    <div>
      <form action="/" method="GET">
        <button><img src="images/Arrow left.svg" alt="go back icon" class="icon"></button>
      </form>
      <button>Insert Tab(s)</button>
    </div>
    <form action="">
      <input type="text" name="" id="" class="search-bar" placeholder="Search">
      <button>
        <img src="images/Search.svg" alt="search icon" class="icon">
      </button>
    </form>
    <div class="tab-list">
      <% for( let i = 0; i < tab_list.length; i++ ) { %>
        <p>
          <a href="<%= tab_list[i].tab_link %>" target="_blank"><%= tab_list[i].tab_link %></a>
          <span class="category"><%= tab_list[i].tab_category %></span>
          <!-- <button type="button">
            <img src="images/Edit.svg" alt="edit icon" class="icon">
          </button>
          <button type="button">
            <img src="images/Trash.svg" alt="delete icon" class="icon">
          </button> -->
          <button>Edit</button>
          <button onclick="deleteTab('<%= tab_list[i].tab_id %>')">Delete</button>
        </p>
        <hr>
      <% } %>
    </div>
  </main>
</body>
</html>